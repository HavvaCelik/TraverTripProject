@using TraverTripProject.Models.Class
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered ">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Delete</th>
        <th>Update</th>
        <th>Detail</th>
    </tr>

    @foreach (var blog in Model)
    {
        <tr>

            <td>@blog.Id</td>
            <td>@blog.Title</td>
            <td><a href="/Admin/BlogDelete/@blog.Id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/BlogBring/@blog.Id" class="btn btn-warning">Update</a></td>
            <td><a href="#" class="btn btn-default">Detail</a></td>
        </tr>
    }


</table>

<a href="/Admin/NewBlog/" class="btn btn-primary">New Blog</a>

