@model TraverTripProject.Models.Class.Blog
@{
    ViewBag.Title = "BlogBring";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Update Page</h2>
<br />
@using (Html.BeginForm("BlogUpdate", "Admin", FormMethod.Post))
{
    @Html.LabelFor(t0 => t0.Id)
    @Html.TextBoxFor(t0 => t0.Id, new { @class = "form-control",  @readonly="readonly" })
    <br />
    @Html.LabelFor(t0 => t0.Title)
    @Html.TextBoxFor(t0 => t0.Title, new { @class = "form-control" })
    <br />
    @Html.LabelFor(t0 => t0.Date)
    @Html.TextBoxFor(t0 => t0.Date, new { @class = "form-control" })
    <br />
    @Html.LabelFor(t0 => t0.BlogImg)
    @Html.TextBoxFor(t0 => t0.BlogImg, new { @class = "form-control" })
    <br />
    @Html.LabelFor(t0 => t0.Description)
    @Html.TextAreaFor(t0 => t0.Description,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success"> Blog Update </button>
}

